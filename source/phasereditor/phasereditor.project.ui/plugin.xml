<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension
         point="org.eclipse.wst.jsdt.ui.JsGlobalScopeContainerPage">
      <JsGlobalScopeContainerPage
            class="phasereditor.project.ui.wizards.PhaserLibraryWizardPage"
            id="phasereditor.project.ui.wizards.libraryPage"
            name="Phaser API 2.4.6 Library">
      </JsGlobalScopeContainerPage>
      <JsGlobalScopeContainerPage
            class="phasereditor.project.ui.wizards.ECMA5LibraryWizardPage"
            id="phasereditor.project.ui.ecma5page"
            name="ECMA 5 API Library">
      </JsGlobalScopeContainerPage>
      <JsGlobalScopeContainerPage
            class="phasereditor.project.ui.wizards.BrowserLibraryWizardPage"
            id="phasereditor.project.ui.browserpage"
            name="Browser API Library">
      </JsGlobalScopeContainerPage>
   </extension>
   
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="phasereditor.ui.wizardCategory"
            class="phasereditor.project.ui.wizards.NewPhaserProjectWizard"
            finalPerspective="phasereditor.ide.ui.perspective"
            hasPages="true"
            icon="platform:/plugin/phasereditor.ui/icons/newjprj_wiz.gif"
            id="phasereditor.project.ui.newproject"
            name="Phaser Project"
            project="true">
      </wizard>
      <wizard
            category="phasereditor.ui.wizardCategory"
            class="phasereditor.project.ui.wizards.NewGameStateWizard"
            finalPerspective="phasereditor.ide.ui.perspective"
            icon="platform:/plugin/phasereditor.ui/icons/newjscript_wiz.gif"
            id="phasereditor.project.ui.newGameState"
            name="State Source File">
      </wizard>
      <wizard
            category="phasereditor.ui.wizardCategory"
            class="phasereditor.project.ui.wizards.NewSpriteWizard"
            finalPerspective="phasereditor.ide.ui.perspective"
            icon="platform:/plugin/phasereditor.ui/icons/newjscript_wiz.gif"
            id="phasereditor.project.ui.newSprite"
            name="Sprite Source File">
      </wizard>
      <wizard
            category="phasereditor.ui.wizardCategory"
            class="phasereditor.project.ui.wizards.NewGroupWizard"
            finalPerspective="phasereditor.ide.ui.perspective"
            icon="platform:/plugin/phasereditor.ui/icons/newjscript_wiz.gif"
            id="phasereditor.project.ui.newGroup"
            name="Group Source File">
      </wizard>
      <!--
      <primaryWizard
            id="phasereditor.project.ui.newproject">
      </primaryWizard>
      <primaryWizard
            id="phasereditor.project.ui.newGameState">
      </primaryWizard>
      <primaryWizard
            id="phasereditor.project.ui.newSprite">
      </primaryWizard>
      -->
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <newWizardShortcut
               id="phasereditor.project.ui.newproject">
         </newWizardShortcut>
         <newWizardShortcut
               id="phasereditor.project.ui.newGameState">
         </newWizardShortcut>
         <newWizardShortcut
               id="phasereditor.project.ui.newSprite">
         </newWizardShortcut>
         <newWizardShortcut
               id="phasereditor.project.ui.newGroup">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.keywords">
      <keyword
            id="phasereditor.project.ui.keywords.phaser"
            label="phaser">
      </keyword>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.resources.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="phasereditor.project.ui.*">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         id="phasereditor.project.ui.commonWizards"
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonWizard
            menuGroupId="phaser.new.project"
            type="new"
            wizardId="phasereditor.project.ui.newproject">
         <enablement></enablement>
      </commonWizard>
      <commonWizard
            menuGroupId="phaser.new.source"
            type="new"
            wizardId="phasereditor.project.ui.newGameState">
         <enablement></enablement>
      </commonWizard>
      <commonWizard
            menuGroupId="phaser.new.source"
            type="new"
            wizardId="phasereditor.project.ui.newSprite">
         <enablement></enablement>
      </commonWizard>
      <commonWizard
            menuGroupId="phaser.new.source"
            type="new"
            wizardId="phasereditor.project.ui.newGroup">
         <enablement></enablement>
      </commonWizard>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="phasereditor.project.ui.resetlibraries"
            name="Reset Project Libraries">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:project?after=buildAutomatically">
         <command
               commandId="phasereditor.project.ui.resetlibraries"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="phasereditor.project.ui.handlers.ResetProjectLibsHanler"
            commandId="phasereditor.project.ui.resetlibraries">
         <enabledWhen>
            <with
                  variable="selection">
               <iterate
                     ifEmpty="false">
                  <instanceof
                        value="org.eclipse.wst.jsdt.ui.ProjectLibraryRoot">
                  </instanceof>
               </iterate>
            </with>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            class="phasereditor.project.ui.PhaserProblemLabelDecorator"
            icon="platform:/plugin/org.eclipse.wst.jsdt.ui/icons/full/obj16/error_obj.gif"
            id="phasereditor.project.ui.problemsDecorator"
            label="Phaser Problems Decorator"
            lightweight="true"
            location="BOTTOM_LEFT"
            state="true">
         <enablement>
            <objectClass
                  name="org.eclipse.core.resources.IFile">
            </objectClass>
         </enablement>
      </decorator>
   </extension>
</plugin>
