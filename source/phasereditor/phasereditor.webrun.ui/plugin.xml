<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="phasereditor.ui.phaserCategory"
            description="Run the Phaser project in a browser."
            id="phasereditor.webrun.ui.runlocal"
            name="Run Phaser Project">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.workbench.file?after=additions">
         <command
               commandId="phasereditor.webrun.ui.runlocal"
               icon="platform:/plugin/phasereditor.ui/icons/world.png"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:project?after=buildAutomatically">
         <separator
               name="phasereditor.webrun.ui.separator1"
               visible="true">
         </separator>
         <command
               commandId="phasereditor.webrun.ui.runlocal"
               icon="platform:/plugin/phasereditor.ui/icons/world.png"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="phasereditor.webrun.ui.handlers.RunLocalHandler"
            commandId="phasereditor.webrun.ui.runlocal">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="phasereditor.webrun.ui.runlocal"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M3+F5">
      </key>
   </extension>
</plugin>
