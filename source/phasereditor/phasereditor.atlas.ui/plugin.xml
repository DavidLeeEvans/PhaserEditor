<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="phasereditor.ui.wizardCategory"
            class="phasereditor.atlas.ui.wizards.NewAtlasMakerWizard"
            finalPerspective="phasereditor.ide.ui.perspective"
            icon="platform:/plugin/phasereditor.ui/icons/atlas_add.png"
            id="phasereditor.atlas.ui.wizards.new.atlasmaker"
            name="Atlas Generator File">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.eclipse.ui.navigator.resources.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="phasereditor.atlas.ui.*">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <newWizardShortcut
               id="phasereditor.atlas.ui.wizards.new.atlasmaker">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonWizard
            menuGroupId="phaser.new.other"
            type="new"
            wizardId="phasereditor.atlas.ui.wizards.new.atlasmaker">
         <enablement></enablement>
      </commonWizard>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="phasereditor.atlas.ui.editors.AtlasGeneratorEditor"
            extensions="atlas"
            icon="platform:/plugin/phasereditor.ui/icons/images.png"
            id="phasereditor.atlas.ui.editors.AtlasGenEditor"
            name="Atlas Generator">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:phasereditor.atlas.ui.editors.AtlasGenEditor?before=additions">
         <command
               commandId="phasereditor.atlas.ui.editor.addfiles"
               icon="platform:/plugin/phasereditor.ui/icons/picture_add.png"
               style="push"
               tooltip="Add image files.">
         </command>
         <command
               commandId="org.eclipse.ui.edit.delete"
               style="push"
               tooltip="Delete selected sprites.">
         </command>
         <command
               commandId="phasereditor.atlas.ui.editor.buildatlas"
               icon="platform:/plugin/phasereditor.ui/icons/cog.png"
               style="push">
         </command>
         <command
               commandId="phasereditor.atlas.ui.editor.changelayout"
               icon="platform:/plugin/phasereditor.ui/icons/application_side_expand.png"
               style="push">
         </command>
         <command
               commandId="phasereditor.atlas.ui.editor.showsettings"
               icon="platform:/plugin/phasereditor.ui/icons/wrench.png"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="phasereditor.atlas.ui.handlers.DeleteAtlasSelectionHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
         	<and>
            <with
                  variable="selection">
               <count
                     value="+">
               </count>
            </with>
            <with
                  variable="activePartId">
               <equals
                     value="phasereditor.atlas.ui.editors.AtlasGenEditor">
               </equals>
            </with>
            </and>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="phasereditor.atlas.ui.category"
            name="Atlas Generator">
      </category>
      <command
            categoryId="phasereditor.atlas.ui.category"
            defaultHandler="phasereditor.atlas.ui.handlers.AddFilesHandler"
            id="phasereditor.atlas.ui.editor.addfiles"
            name="Add Files">
      </command>
      <command
            categoryId="phasereditor.atlas.ui.category"
            defaultHandler="phasereditor.atlas.ui.handlers.BuildAtlasHandler"
            id="phasereditor.atlas.ui.editor.buildatlas"
            name="Build Atlas">
      </command>
      <command
            categoryId="phasereditor.atlas.ui.category"
            defaultHandler="phasereditor.atlas.ui.handlers.ShowSettingsHandler"
            id="phasereditor.atlas.ui.editor.showsettings"
            name="Settings">
      </command>
      <command
            categoryId="phasereditor.atlas.ui.category"
            defaultHandler="phasereditor.atlas.ui.handlers.ChangeLayoutHandler"
            id="phasereditor.atlas.ui.editor.changelayout"
            name="Side Panel">
      </command>
   </extension>

</plugin>
