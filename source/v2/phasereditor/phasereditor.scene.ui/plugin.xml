<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="phasereditor.scene.ui.editor.SceneEditor"
            default="false"
            icon="platform:/plugin/phasereditor.ui/icons/canvas.png"
            id="phasereditor.scene.ui.SceneEditor"
            name="Scene Editor">
         <contentTypeBinding
               contentTypeId="phasereditor.scene.core.SceneContentType">
         </contentTypeBinding>
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="phasereditor.scene.ui.category"
            name="Scene Editor">
      </category>
      <command
            categoryId="phasereditor.scene.ui.category"
            id="phasereditor.scene.ui.positionTool"
            name="Show Position Tool">
      </command>
      <command
            categoryId="phasereditor.scene.ui.category"
            id="phasereditor.scene.ui.scaleTool"
            name="Show Scale Tool">
      </command>
      <command
            categoryId="phasereditor.scene.ui.category"
            id="phasereditor.scene.ui.angleTool"
            name="Show Angle Tool">
      </command>
      <command
            categoryId="phasereditor.scene.ui.category"
            id="phasereditor.scene.ui.originTool"
            name="Show Origin Tool">
      </command>
      <command
            categoryId="phasereditor.scene.ui.category"
            id="phasereditor.scene.ui.resizeTileSprite"
            name="Resize Tile Sprite">
      </command>
      <command
            categoryId="phasereditor.scene.ui.category"
            id="phasereditor.scene.ui.order_UP"
            name="Move Objects Up">
      </command>
      <command
            categoryId="phasereditor.scene.ui.category"
            id="phasereditor.scene.ui.order_DOWN"
            name="Move Objects Down">
      </command>
      <command
            categoryId="phasereditor.scene.ui.category"
            id="phasereditor.scene.ui.order_TOP"
            name="Move Objects to the Top">
      </command>
      <command
            categoryId="phasereditor.scene.ui.category"
            id="phasereditor.scene.ui.order_BOTTOM"
            name="Move Objects to the Bottom">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="phasereditor.scene.ui.editor.handlers.ShowPositionToolHandler"
            commandId="phasereditor.scene.ui.positionTool">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.sceneContext">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ShowScaleToolHandler"
            commandId="phasereditor.scene.ui.scaleTool">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.sceneContext">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ShowAngleToolHandler"
            commandId="phasereditor.scene.ui.angleTool">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.sceneContext">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ShowOriginToolHandler"
            commandId="phasereditor.scene.ui.originTool">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.sceneContext">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ResizeTileSpriteHandler"
            commandId="phasereditor.scene.ui.resizeTileSprite">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.sceneContext">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ChangeObjectsOrderHandler"
            commandId="phasereditor.scene.ui.order_UP">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.sceneContext">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ChangeObjectsOrderHandler"
            commandId="phasereditor.scene.ui.order_DOWN">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.sceneContext">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ChangeObjectsOrderHandler"
            commandId="phasereditor.scene.ui.order_TOP">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.sceneContext">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.ChangeObjectsOrderHandler"
            commandId="phasereditor.scene.ui.order_BOTTOM">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.sceneContext">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="phasereditor.scene.ui.editor.handlers.DeleteHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <reference
                  definitionId="phasereditor.scene.ui.sceneContext">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="phasereditor.scene.ui.positionTool"
            contextId="phasereditor.scene.ui.objects"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M">
      </key>
      <key
            commandId="phasereditor.scene.ui.scaleTool"
            contextId="phasereditor.scene.ui.objects"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="S">
      </key>
      <key
            commandId="phasereditor.scene.ui.angleTool"
            contextId="phasereditor.scene.ui.objects"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="N">
      </key>
      <key
            commandId="phasereditor.scene.ui.originTool"
            contextId="phasereditor.scene.ui.objects"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="O">
      </key>
      <key
            commandId="phasereditor.scene.ui.resizeTileSprite"
            contextId="phasereditor.scene.ui.objects"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="L">
      </key>
      <key
            commandId="phasereditor.scene.ui.order_UP"
            contextId="phasereditor.scene.ui.objects"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="PAGE_UP">
      </key>
      <key
            commandId="phasereditor.scene.ui.order_DOWN"
            contextId="phasereditor.scene.ui.objects"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="PAGE_DOWN">
      </key>
      <key
            commandId="phasereditor.scene.ui.order_TOP"
            contextId="phasereditor.scene.ui.objects"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="HOME">
      </key>
      <key
            commandId="phasereditor.scene.ui.order_BOTTOM"
            contextId="phasereditor.scene.ui.objects"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="END">
      </key>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="phasereditor.scene.ui.sceneContext">
         <or>
            <with
                  variable="activePartId">
               <equals
                     value="phasereditor.scene.ui.SceneEditor">
               </equals>
            </with>
            <and>
               <with
                     variable="activePartId">
                  <equals
                        value="org.eclipse.ui.views.ContentOutline">
                  </equals>
               </with>
               <with
                     variable="activeEditorId">
                  <equals
                        value="phasereditor.scene.ui.SceneEditor">
                  </equals>
               </with>
            </and>
            <with
                  variable="activeContexts">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <equals
                        value="phasereditor.scene.ui.objects">
                  </equals>
               </iterate>
            </with>
         </or>
      </definition>
   </extension>
   <extension
         point="phasereditor.project.core.buildParticipant">
      <participant
            handler="phasereditor.scene.ui.build.SceneEditorProjectBuildParticipant"
            id="phasereditor.scene.ui.build.SceneEditorProjectBuildParticipant"
            order="1000">
      </participant>
      <participant
            handler="phasereditor.scene.ui.build.SceneScreenshotBuildParticipant"
            id="phasereditor.scene.ui.build.SceneScreenshotBuildParticipant"
            order="3">
      </participant>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            description="The scene objects context, like the scene or the outline."
            id="phasereditor.scene.ui.objects"
            name="Objects Context"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="phasereditor.scene.ui.wizardCategory"
            name="Scene"
            parentCategory="phasereditor.ui.wizardCategory">
      </category>
      <wizard
            category="phasereditor.scene.ui.wizardCategory"
            class="phasereditor.scene.ui.wizards.NewSceneFileWizard"
            finalPerspective="phasereditor.ide.ui.perspective"
            icon="platform:/plugin/phasereditor.ui/icons/new_canvas.png"
            id="phasereditor.scene.ui.wizards.NewSceneFileWizard"
            name="Scene File">
         <description>
            Creates a new Scene file.
         </description>
         <keywordReference
               id="phasereditor.scene.ui.keywordCanvas">
         </keywordReference>
         <keywordReference
               id="phasereditor.scene.ui.keywordPrefab">
         </keywordReference>
         <keywordReference
               id="phasereditor.scene.ui.keywordScene">
         </keywordReference>
         <keywordReference
               id="phasereditor.scene.ui.keywordSprite">
         </keywordReference>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.keywords">
      <keyword
            id="phasereditor.scene.ui.keywordScene"
            label="Scene">
      </keyword>
      <keyword
            id="phasereditor.scene.ui.keywordSprite"
            label="Sprite">
      </keyword>
      <keyword
            id="phasereditor.scene.ui.keywordCanvas"
            label="Canvas">
      </keyword>
      <keyword
            id="phasereditor.scene.ui.keywordPrefab"
            label="Prefab">
      </keyword>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <newWizardShortcut
               id="phasereditor.scene.ui.wizards.NewSceneFileWizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonWizard
            menuGroupId="phaser.new.other"
            type="new"
            wizardId="phasereditor.scene.ui.wizards.NewSceneFileWizard">
         <enablement></enablement>
      </commonWizard>
   </extension>

</plugin>
